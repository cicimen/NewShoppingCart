<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Accessories</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/la_boutique/core.css" rel="stylesheet" />
    <link href="~/Content/la_boutique/custom.css" rel="stylesheet" />
    <link href="~/Content/la_boutique/midnightblue.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>

</head>
<body>
    <div class="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Accessories", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>

        <!-- Content section -->
        <section class="main">

            @RenderBody()
        </section>


        <footer>
            <div class="container">
                <p>&copy; @DateTime.Now.Year - Accessories</p>
            </div>
        </footer>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jquery-ui")
        @Scripts.Render("~/bundles/bootstrap")

        
        <script src="~/Scripts/la_boutique/jquery.easing-1.3.min.js"></script>
        <script src="~/Scripts/la_boutique/jquery.elevatezoom.js"></script>
        <script src="~/Scripts/la_boutique/jquery.isotope.min.js"></script>
        <script src="~/Scripts/la_boutique/jquery.flexslider.js"></script>
        <script src="~/Scripts/la_boutique/jquery.sharrre-1.3.4.js"></script>
        <script src="~/Scripts/la_boutique/imagesloaded.js"></script>
        <script src="~/Scripts/la_boutique/la_boutique.js"></script>

        @*@Scripts.Render("~/bundles/masonry")*@
        @RenderSection("scripts", required: false)
</body>
</html>

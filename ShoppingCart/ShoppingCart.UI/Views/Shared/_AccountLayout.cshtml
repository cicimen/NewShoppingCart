<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Accessories</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*@Styles.Render("~/Content/themes/base/css")*@

    <link href="~/Content/la_boutique/core.css" rel="stylesheet" />
    <link href="~/Content/la_boutique/custom.css" rel="stylesheet" />
    <link href="~/Content/la_boutique/midnightblue.css" rel="stylesheet" />
    <link href="~/Content/la_boutique/fonts/font-awesome.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
</head>
<body>
    @*<div class="navbar navbar-inverse navbar-fixed-top">*@
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Accessories", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="row">
               <div class="col-md-2 col-lg-2">
                   <aside class="sidebar">
                       @Html.Partial("_AccountMenuPartial")
                   </aside>
               </div>
                <div class="col-md-10 col-lg-10">
                    @RenderBody()
                </div>              
            </div>
        <div class="push"><!--//--></div>
    </div>
    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Accessories</p>
        </div>
    </footer>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")


    <script src="~/Scripts/la_boutique/jquery.easing-1.3.min.js"></script>
    <script src="~/Scripts/la_boutique/jquery.elevatezoom.js"></script>
    <script src="~/Scripts/la_boutique/jquery.isotope.min.js"></script>
    <script src="~/Scripts/la_boutique/jquery.flexslider.js"></script>
    <script src="~/Scripts/la_boutique/jquery.sharrre-1.3.4.js"></script>
    <script src="~/Scripts/la_boutique/imagesloaded.js"></script>
    <script src="~/Scripts/la_boutique/la_boutique.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>

@model CheckoutAddressViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CheckoutLayout.cshtml";
    string address = "";
    string shippingMethod = "";
    string paymentMethod = "";
    string orderReview = "";
    string shipmentAddress = "";
    string continue1 = "";
    string backToCart = "";

    if (Html.GetLanguageCode() == "tr")
    {
        address = "Adres";
        shippingMethod = "Kargo Seçenekleri";
        paymentMethod = "Ödeme Seçenekleri";
        orderReview = "Siparişi Tamamla";
        shipmentAddress = "Gönderi Adresi";
        continue1 = "Devam Et";
        backToCart = "Sepete Dön";
    }
    else
    {
        address = "Address";
        shippingMethod = "Shipping Method";
        paymentMethod = "Payment Method";
        orderReview = "Order Review";
        shipmentAddress = "Shipment Address";
        continue1 = "Continue";
        backToCart = "Back To Cart";
    }
}

<section class="checkout">
        <div class="row">
            <div class="col-md-9 col-lg-9">
                <div class="box">

                    <!-- Checkout progress -->
                    <div id="checkout-progress">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#">
                                    <i class="icon-map-marker icon-large"></i>
                                    <span>@address</span>
                                </a>
                            </li>
                            <li>
                                <div>
                                    <i class="icon-truck icon-large"></i>
                                    <span>@shippingMethod</span>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <i class="icon-money icon-large"></i>
                                    <span>@paymentMethod</span>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <i class="icon-search icon-large"></i>
                                    <span>@orderReview</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <!-- End id="checkout-progress" -->
                    <!-- Checkout content -->
                    <div id="checkout-content">
                        <div class="box-header">
                            <h3>@shipmentAddress</h3>
                        </div>
                        <div class="box-content">
                            <div class="row">
                                <div class="col-md-6 col-lg-6">


                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SelectedAddress, address, new { @class = "control-label" })
                                        <div class="controls">
                                            @Html.DropDownListFor(x => x.SelectedAddress, new SelectList(Model.Addresses, "AddressID", "AddressDescription"),
                                            new{@class="", onchange="" })
                                            @Html.ValidationMessageFor(model => model.SelectedAddress)
                                        </div>
                                    </div>

                                    <div class="form-group">


                                    </div>



                               </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="pull-left">
                                <a href="cart.html" class="btn btn-small">
                                    <i class="icon-chevron-left"></i> &nbsp; @backToCart
                                </a>
                            </div>
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary">
                                    @continue1 &nbsp; <i class="icon-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- End id="checkout-content" -->

                </div>
            </div>
            <div class="col-md-3 col-lg-3">
                @Html.Action("CartTotal", "Cart", null)
            </div>
        </div>
</section>


    Layout = "~/Views/Shared/_CheckoutLayout.cshtml";
    string myCart = "";
    string product = "";
    string quantity = "";
    string price = "";
    string total = "";
    string continueShopping = "";
    string updateCart = "";
    string proceedToCheckout = "";
    string subTotal = "";
    string total2 = "";
    string shipping = "";
    if (Html.GetLanguageCode() == "tr")
    {
        myCart = "SEPETİM";
        product = "Ürün";
        quantity = "Adet";
        price = "BİRİM FİYAT";
        total = "TOPLAM FİYAT";
        continueShopping = "ALIŞVERİŞE DEVAM ET";
        updateCart = "SEPETİ GÜNCELLE";

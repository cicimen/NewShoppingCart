            <div class="col-lg-9 col-md-9">

                <!-- Cart -->
                <div class="box">


                    <div class="box-header">
                        <h3>
                            @if (@Html.GetLanguageCode() == "tr")
                            {
                                @:Sepetim
                            }
                            else
                            {

@model ShoppingCart.Service.ViewModel.ProductViewModel
@{
    ViewBag.Title = Model.ProductName;
}


@if (Model.ProductImages.Count > 0)
{
    <div>
        <img class="img-responsive" width="300" height="300" src="@Url.Action("GetImage", "Image",
                        new {productImageID= Model.ProductImages.OrderByDescending(x=>x.DisplayOrder).First().ProductImageID })" />
    </div>
}

@foreach (var item in Model.ProductImages.OrderByDescending(x => x.DisplayOrder).Skip(1))
{
    <img class="img-responsive" width="100" height="100"  src="@Url.Action("GetImage", "Image",
                        new {item.ProductImageID})" />
}

@Model.ProductName
<hr />
@Model.ProductDescription
<hr />


@using (Html.BeginForm("AddToCart","Cart",FormMethod.Post, new {}))
{
    @Html.Hidden("ProductID",Model.ProductID)
    
    @*if (ViewBag.ProductVariantValueID != null)
    {
        @Html.DropDownList("ProductVariantValueID", null, new { }) <br /> <br />
    }*@

    foreach (var item in Model.ProductVariants)
    {
        if(item.ProductVariantValues!= null &&  item.ProductVariantValues.Count>0)
        {
            @Html.DropDownList("ProductVariantValueID", new SelectList(item.ProductVariantValues, "ProductVariantValueID", "ProductVariantValueName"),
            item.ProductVariantName)<br /> <br />
        }
    }



    @Html.TextBox("Count", 1, new { type = "number", min = "1", max = (int) ViewBag.ProductInventory })
   
    <p>
            <input type="submit" value="Add To Cart" />
    </p>
    
}

